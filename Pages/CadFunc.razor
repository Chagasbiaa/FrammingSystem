@code{
  public RegisterFuncionario Input {get; set;} = new();

  public class RegisterFuncionario{
    public string Codigo;
    public string Email;
    public string Nome;
    public string Senha;
  }

  public async Task Submit(){
      Console.WriteLine("Test");
      var client = ClientFactory.CreateClient();

      var values = new Dictionary<string, string>
      {
          { "nome",  Input.Nome},
          { "username",  Input.Nome},
          { "email",  Input.Email},
          { "password",  Input.Senha},
          { "userType",  "fun"},
      };
        using StringContent jsonContent = new(
            JsonSerializer.Serialize(new
            {
                nome = Input.Nome,
                username = Input.Nome,
                email = Input.Email,
                password = Input.Senha,
                userType = "fun"
            }),
            Encoding.UTF8,
            "application/json");

        var content = new FormUrlEncodedContent(values);

        Console.WriteLine($"teste => {jsonContent}");

       var response = await client.PostAsync("https://framming-api.onrender.com/users/register", jsonContent);

        var errorMessage = await response.Content.ReadAsStringAsync();
        Console.WriteLine($"Error: {errorMessage}");

  }

}
